<p id="notice"><%= notice %></p>


<div class="row">
	<div id="incident-show" class="span3">
		<div class="incident-description">
			<p>
			  <h2>Description:</h2>
			  <%= @incident.description %>
			</p>
		</div>	
		<div>
			<h3>Feelings</h3>
			<ul id="feelingsTC" class="nav navlist">
				<% @incident.feelings.each do |feeling| %>
					<li class="feeling"><a href="#feeling_<%=feeling.id %>"><%= feeling.name %></a></li>
				<%end%>
			</ul>
		</div>
		<div>
			<h3>Thoughts</h3>
			<ul id="thoughtsTC" class="nav navlist">
				<% @incident.thoughts.each do |thought| %>
					<li class="thought"><a href="#thought_<%=thought.id %>"><%= thought.thought %></a></li>
				<%end%>
			</ul>
		</div>		
		<div>
			<%= link_to 'Edit', edit_incident_path(@incident) %> |
			<%= link_to 'Back', incidents_path %>
		</div>
	</div><!-- /incident-show -->
	

	<div id="wizard" class="span9">
		<!--  Steps for the CBT wizard:
					1.  Feelings: names & intensityBefore
					2.  Thoughts
					3.  Distortions forEach thought
					4.  rationalThought for each thought
					5.  intensityAfter forEach feeling in feelings
				
		-->
		<div id="wizard-nav" class="tabbable">
			<ul class="nav nav-tabs">
					<li><a href="#step1"class="active" data-toggle="tab">Step 1</a></li>
					<li><a href="#step2"class="" data-toggle="tab">Step 2</a></li>
					<li><a href="#step3"class="" data-toggle="tab">Step 3</a></li>
					<li><a href="#step4"class="" data-toggle="tab">Step 4</a></li>
					<li><a href="#step5"class="" data-toggle="tab">Step 5</a></li>
			</ul>
		<div class="tab-content wizard-steps">
			<div id="step1" class="tab-pane active">
				<h3>Step 1</h3>
				<div>
					<div id="addFeeling" class="btn"><i class="icon-plus"></i> Add a feeling</div>
					<div id="newFeelingPartial" style="display:none"><%= render 'feelings' %></div>
				</div>
			</div>

			<div id="step2" class="tab-pane">
				<h3>Step 2</h3>
				<div>
					<div id="addThought" class="btn"><i class="icon-plus"></i> Add a thought</div>
					<div id="newThoughtPartial" style="display:none"><%= render 'thoughts' %></div>
				</div>
			</div>

			<div id="step3" class="tab-pane">
				<h3>Step 3</h3>
			</div>

			<div id="step4" class="tab-pane">
				<h3>Step 4</h3>
			</div>

			<div id="step5" class="tab-pane">
				<h3>Step 5</h3>
			</div>
		</div>




	</div><!-- /wizard-->
</div><!-- /row -->


